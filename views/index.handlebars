{{!-- <h1>Temperatura Aqui</h1> --}}
<div class="container main">
    <div class="col-md-6 busca">
        <div id="divBuscaCidade">
            <form action="/" method="post">
                <div id="divLabelBusca" class="divCidade">
                    <h3 style="text-align: center;">Saiba mais sobre o clima de várias cidades</h3>
                </div>
                <div id="divInputBusca" class="divCidade">
                    <input id="inputBusca" type="text" placeholder="Nome da cidade" name="cityName">
                    <button id="btnInputBusca" type="submit">Buscar</button>
                </div>
                <div id="dadosClima">
                    {{#if data.encontrada}}
                        {{#data}}
                            <div>
                                <h4 style="text-align: center;">{{nome}}</h4>
                            </div>
                            <div class="cityData">
                                <label class="atributo" for="">País: </label><br>
                                <label for="">{{pais}}</label><br>
                            </div>
                            <div class="cityData">
                                <label class="atributo" for="">Temperatura: </label><br>
                                <label for="">{{temperatura}} °C</label><br>
                            </div>
                            <div class="cityData">
                                <label class="atributo" for="">Umidade: </label><br>
                                <label for="">{{umidade}}%</label><br>
                            </div>
                            <div class="cityData">
                                <label class="atributo" for="">Descrição do clima: </label><br>
                                <label for="">{{climadescricao}}</label><br>
                            </div>
                        {{/data}}
                    {{else}}
                        <small for="">*Por favor, informe corretamente o nome da cidade</small>
                    {{/if}}
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-6 historico d-flex container">        
        <div class="col-sm-6">
            <h3 style="text-align: center;">Cidades mais pesquisadas</h3>
            <div>
                {{#top5}}
                <label class="labelH">{{nome}}</label><br>
                {{/top5}}
            </div>
        </div>
        <div class="col-sm-6">
            <h3 style="text-align: center;">Histórico de pesquisa</h3>
            <div>
                {{#hist}}
                <label class="labelH">{{nome}}</label><br>
                {{/hist}}
            </div>
        </div>
    </div>
</div>